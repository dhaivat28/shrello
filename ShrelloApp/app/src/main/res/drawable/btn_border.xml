<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <solid android:color="@color/PrimaryBlue_50opacity" />
            <stroke android:width="2dp" android:color="@color/PrimaryBlue" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <solid android:color="@color/PrimaryBlue_25opacity" />
            <stroke android:width="2dp" android:color="@color/PrimaryBlue" />
        </shape>
    </item>
</selector>