<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup_name">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        tools:targetApi="lollipop">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:src="@mipmap/ic_launcher"/>

            <Button
                android:id="@+id/toolbar_login_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@color/noColor"
                android:stateListAnimator="@null"
                android:text="Log In"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"/>

        </RelativeLayout>

    </Toolbar>
    <ScrollView
        android:id="@+id/scrollview"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_below="@id/toolbar">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
        <TextView
            android:id="@+id/greeting_msg"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:text="Hi. What's your name?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/fullname"
            android:layout_below="@+id/greeting_msg"
            android:text="Full name"
            android:textColor="@color/colorPrimary_100opacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_below="@id/fullname"
            android:id="@+id/edit_fullname"
            android:layout_width="match_parent"
            android:textColor="#777"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    </ScrollView>
        <Button
            android:layout_alignParentRight="true"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_full"
            android:stateListAnimator="@null"
            android:text="Next"
            android:padding="0dp"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:layout_margin="10dp"
            android:onClick="load_signup_squence_email"/>
</RelativeLayout>
